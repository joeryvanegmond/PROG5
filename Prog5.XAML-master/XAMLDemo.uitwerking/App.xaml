<Application x:Class="XAMLDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">      
    <Application.Resources>
        <!-- Een String die je vanuit de applicatie kan benaderen -->
        <sys:String x:Key="ComboBoxTitle">Mijn tabel</sys:String>
        <!-- Een kleur die je vanuit de applicatie kan benaderen -->
        <SolidColorBrush x:Key="MainColor" Color="Red"></SolidColorBrush>
        <SolidColorBrush x:Key="SecondColor" Color="Blue"></SolidColorBrush>
    </Application.Resources>
</Application>
